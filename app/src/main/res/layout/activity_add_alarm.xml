<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddAlarmActivity">
    <TextView
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addEditTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:onClick="showTimePickerDialog"
            app:layout_constraintHorizontal_bias="0.493" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addEditLabelRepeat" tools:layout_editor_absoluteY="129dp"
            tools:layout_editor_absoluteX="24dp" android:text="@string/addEditAlarm_repeat"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3" tools:layout_editor_absoluteY="129dp"
            tools:layout_editor_absoluteX="102dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addEditLabelLabel"
            tools:layout_editor_absoluteY="129dp"
            tools:layout_editor_absoluteX="246dp" android:text="@string/addEditAlarm_Label"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8" tools:layout_editor_absoluteY="129dp"
            tools:layout_editor_absoluteX="329dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/baseline_add_white_24"
            android:id="@+id/floatingActionButton2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" android:focusable="auto" android:onClick="addAlarm"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>